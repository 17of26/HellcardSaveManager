<Window x:Class="HellcardSaveManager.MessageCheckBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HellcardSaveManager"
        mc:Ignorable="d"
        Title="Send Logs" Height="170" Width="350">
    <StackPanel>
        <TextBlock TextAlignment="Center"  Padding="5, 10, 5, 5" TextWrapping="Wrap" Text="Please send the HELLCARD_Demo_lox.txt to support@thingtrunk.com. If you press OK the right folder will open and you just have to copy-paste the file." />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="OK" Grid.Column="2" Margin="10" Click="OKClick"/>
        </Grid>
        <CheckBox x:Name="dontShow" Margin="5" HorizontalAlignment="Center" Content="Don't show me this again"/>
    </StackPanel>
</Window>
